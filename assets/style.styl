
* {
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
}

body
	width 100%
	float left
	padding 0
	margin 0
	top 0
	left 0
	overflow hidden
	background-color black
	font-family 'Ubuntu'
	color white
	.header
		width 100%
		float left
		height 150px
		.logo
			width 30%
			height 150px
			display block
			text-align center
			float left
			img
				max-width 100%padding 2% 5%
				height auto
				max-height 100%
		.presentation
			width 70%
			float left
			color white
			height 100%
			h1
				width 100%
				float left
				text-align center
				color white
			span
				text-align center
				width 100%
				float left
	.news-field
		width 100%
		float left
		padding 10%
		.new-square
			width 33.333%
			float left
			a
				display inline-block
				text-decoration none
				color white
				font-family 'Ubuntu'
				width 100%
				float left
				text-align center
				position relative
	.new-title
		width 100%
		float left
		text-align center
		color white
	.new-content
		text-align justify
		padding 2% 5%
		width 100%
		float left
	.new-footer
		text-align right
		width 100%
		float left
		padding 2% 5%
